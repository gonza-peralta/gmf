head-conjunction-rule := phrase &
[ HEAD #head,
  VAL #val,
  ARGS < #phrase2 &
            [ HEAD #head,
              VAL #val ],
         word & 
         [ HEAD conj,
           VAL [ SPR <>,
                 COMPS <#phrase1, #phrase2> ] ],
         #phrase1 & 
            [ HEAD #head,
              VAL #val ] > ].

