head-specifier-rule := phrase &
[ HEAD #head,
  VAL [ SPR < >,
        COMPS #comps ],
  ARGS < #nonhd,
         expression & 
         [ HEAD #head,
           VAL [ SPR < #nonhd >,
                 COMPS #comps ] ] > ].

head-complement-rule-1 := phrase &
[ HEAD #head,
  VAL [ SPR #spr, 
        COMPS < > ],   
  ARGS < word & 
         [ HEAD #head,
           VAL [ SPR #spr, 
                 COMPS < #1 > ] ],  
         #1 >  ].

head-complement-rule-2 := phrase &
[ HEAD #head,
  VAL [ SPR #spr, 
        COMPS < > ],   
  ARGS < word & 
         [ HEAD #head,
           VAL [ SPR #spr, 
                 COMPS < #1, #2 > ] ],
         #1, #2 >  ].

head-modifier-rule := phrase &
[ HEAD #head,
  VAL [ SPR #spr,
        COMPS <> ],
  ARGS < expression & 
         [ HEAD #head,
           VAL [ SPR #spr,
                 COMPS <> ] ],
         phrase-pp > ].

